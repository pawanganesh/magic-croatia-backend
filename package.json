{
  "name": "magic-croatia-backend",
  "version": "1.0.0",
  "description": "Backend for booking app",
  "main": "index.js",
  "scripts": {
    "dev": "yarn build && nodemon dist/server",
    "test": "jest",
    "prod": "node dist/server",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint src/**/*.ts && pretty-quick --pattern '**/*.ts' --check .",
    "lint-staged": "eslint src/**/*.ts && pretty-quick --staged --pattern '**/*.ts' --check .",
    "format": "eslint src/**/*.ts --fix && pretty-quick --pattern '**/*.ts' --write ."
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint-staged"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateogalic112/magic-croatia-backend.git"
  },
  "author": "Mateo Galic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mateogalic112/magic-croatia-backend/issues"
  },
  "homepage": "https://github.com/mateogalic112/magic-croatia-backend#readme",
  "dependencies": {
    "@prisma/client": "4.5.0",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "firebase-admin": "^11.2.1",
    "nodemailer": "^6.8.0",
    "stripe": "^10.15.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "tsc-alias": "^1.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.5.0",
    "ts-jest": "^29.0.3"
  }
}
